<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:clickable="true"
    android:layoutDirection="rtl"
    android:layout_margin="@dimen/_8sdp"
    android:focusable="true"
     android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin">


    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layoutDirection="rtl"

                android:id="@+id/factory_image"
                android:layout_width="match_parent"
                android:src="@drawable/ad_icon"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="10dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <TextView
                android:layoutDirection="rtl"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_mail_outline_black_24dp"
                android:id="@+id/factory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:text="Title"
                android:textSize="15sp" />
            <TextView
                android:layoutDirection="rtl"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_location_on_black_24dp1"
                android:id="@+id/factory_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:text="Title"
                android:textSize="15sp" />
            <TextView
                android:layoutDirection="rtl"

                android:drawableRight="@drawable/service"
                android:drawablePadding="@dimen/_15sdp"
                android:id="@+id/city_name"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:text="Title"
                android:textSize="15sp" />


       />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>