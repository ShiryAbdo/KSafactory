<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_150sdp"
    android:orientation="horizontal"
    android:layout_margin="@dimen/_5sdp"
    android:id="@+id/card"
    android:background="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:padding="@dimen/_2sdp"
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/prd_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:padding="0dp"
            android:layout_gravity="center"
            android:src="@drawable/factory_copy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="#000"
            android:orientation="horizontal">



            <TextView
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:drawableRight="@drawable/chatt"
                android:id="@+id/counter_name"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="@string/write_coments" />
<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight=".5"
    android:id="@+id/like_conte"
    >
    <TextView
    android:layout_margin="@dimen/_2sdp"
    android:layout_gravity="center"
    android:gravity="center"
    android:textColor="@color/white"
    android:id="@+id/like_string"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="@string/like" />
    <ImageView
        android:id="@+id/like_imgeView"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:background="@drawable/like"
        />


</LinearLayout>

        </LinearLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>