<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="rtl"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#8f979daf"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/card"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView

                android:id="@+id/singil_register_Image"
                android:layout_width="0dp"
                 android:layout_weight=".4"
                android:adjustViewBounds="true"
                android:contentDescription="@string/singel_register"
                android:paddingBottom="@dimen/_13sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:scaleType="fitCenter"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/liberaray"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:weightSum="3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                  android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/imageView4"
                        android:layout_weight="1"

                        android:layoutDirection="rtl"
                        android:padding="@dimen/_2sdp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="اسم البنك "
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layoutDirection="rtl"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_weight="2"
                        android:padding="@dimen/_2sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000"
                        android:textColor="#060606"
                        android:text="اسم البنك "
                        android:id="@+id/name_of_bank"
                        android:layout_gravity="center"
                        />

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:text= "رقم البنك"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_2sdp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layoutDirection="rtl"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_weight="2"
                        android:padding="@dimen/_2sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000"
                        android:textColor="#060606"
                        android:id="@+id/number_of_bank"
                        android:text= "رقم البنك"
                        android:layout_gravity="center"
                        />

                </LinearLayout>





                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:text= "اسم الشركه"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_2sdp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layoutDirection="rtl"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_weight="2"
                        android:padding="@dimen/_2sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000"
                        android:textColor="#060606"
                        android:id="@+id/name_of_company"
                        android:text= "اسم الشركه"
                        android:layout_gravity="center"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:paddingBottom="@dimen/_5sdp"
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:text= "رقم الحساب"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_2sdp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layoutDirection="rtl"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_weight="2"
                        android:padding="@dimen/_2sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000"
                        android:textColor="#060606"
                        android:id="@+id/number_of_acount"
                        android:text= "رقم الحساب"
                        android:layout_gravity="center"
                        />

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
